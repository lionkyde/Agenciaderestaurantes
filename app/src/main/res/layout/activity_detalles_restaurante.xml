<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.ciprianlungu.agenciaderestaurantes.gui.DetallesRestaurante">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="274dp"
        android:background="@android:color/darker_gray"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detalles_imagen_restaurante"
            android:layout_width="match_parent"
            android:layout_height="174dp"/>

        <TextView
            android:id="@+id/detalles_tvNombre"
            android:layout_width="225dp"
            android:layout_height="31dp"
            android:layout_gravity="center_horizontal"
            android:text="Nombre"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/detalles_tvTelefono"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefono" />

        <TextView
            android:id="@+id/detalles_tvDireccion"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Direcion" />

        <TextView
            android:id="@+id/detalles_tvEmail"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Email" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bAnterior"
            android:layout_width="189dp"
            android:layout_height="82dp"
            android:text="Anterior" />

        <Button
            android:id="@+id/bSiguiente"
            android:layout_width="196dp"
            android:layout_height="80dp"
            android:text="Siguiente" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bLlamar"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:text="LLamar" />
    </LinearLayout>
</LinearLayout>


